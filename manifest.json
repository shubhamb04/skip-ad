{
  "manifest_version": 3,
  "name": "SkipYouTubeAds",
  "version": "1.0",
  "description": "Skip YouTube ads automatically.",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
